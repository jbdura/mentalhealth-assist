{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/chat/(.*)": "<rootDir>/../libs/chat/src/$1",
    "@app/chat": "<rootDir>/../libs/chat/src",
    "@app/gemini/(.*)": "<rootDir>/../libs/gemini/src/$1",
    "@app/gemini": "<rootDir>/../libs/gemini/src"
  }
}